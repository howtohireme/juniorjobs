.l-footer
  %footer.footer-wrapper.footer-simple.footer-gray
    .container
      .row.col-p30
        .col-sm-4.text-center
          %ul.footer-links.clearfix
            %li.pulled
              %span= t('views.footer.supported_by')
              = link_to 'HowToHireMe', 'https://howtohireme.ru', class: 'link', target: :_blank
        .col-sm-4.clearfix.text-center
          %ul.footer-social.clearfix.align-center
            = render 'layouts/shared/links'
        .col-sm-4.text-center
          %p.copyright.pt0= t('views.footer.copyright', year: Date.today.year)

          :erb
            <%- if Rails.env.production? %>
              <!-- Yandex.Metrika informer -->
              <a href="https://metrika.yandex.ru/stat/?id=47549107&amp;from=informer"
              target="_blank" rel="nofollow"><img src="https://informer.yandex.ru/informer/47549107/3_1_FFFFFFFF_EFEFEFFF_0_pageviews"
              style="width:88px; height:31px; border:0;" alt="Яндекс.Метрика" title="Яндекс.Метрика: данные за сегодня (просмотры, визиты и уникальные посетители)" class="ym-advanced-informer" data-cid="47549107" data-lang="ru" /></a>
              <!-- /Yandex.Metrika informer -->
            <% end %>



%section.page-sign-in.mb40
  .container
    .row
      .col-sm-10.col-sm-offset-1
        .mb20= render 'shared/job_page_header', header: t('admin.users.edit')
        = simple_form_for @user, html: { class: 'b-sign-in form' } do |f|
          = render 'web/auth/users/form', f: f
          = f.submit t('auth.users.form.save'), class: 'btn btn-default submit-button'

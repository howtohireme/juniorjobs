%section.page-sign-in.mb40
  .container
    .row
      .col-sm-10.col-sm-offset-1
        .mb20= render 'shared/job_page_header', header: t('auth.users.new.registration_label')
        = simple_form_for @user, html: { class: 'b-sign-in form' } do |f|
          = render 'form', f: f
          .form-group
            = f.button :submit, t('auth.users.form.submit'), class: 'btn btn-default submit-button'
